@using Company.DAL.Entites
@model IEnumerable<Department>

@{
    ViewData["Title"] = "Department List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fas fa-building"></i> All Departments</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Create Department
        </a>
    </div>

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(d => d.Code)</th>
                    <th>@Html.DisplayNameFor(d => d.Name)</th>
                    <th>@Html.DisplayNameFor(d => d.Description)</th>
                    <th>@Html.DisplayNameFor(d => d.CreationDate)</th>
                    <th style="width: 200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Code</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.CreationDate</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Update" asp-route-id="@item.ID" class="btn btn-success btn-sm">
                                    <i class="fas fa-edit"></i> Update
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm ms-2" onclick="return confirm('Are you sure you want to delete this department?');">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-outline-info">
                                    <i class="fas fa-trash-alt"></i> Details
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center mt-5">
            <h4><i class="fas fa-info-circle"></i> No departments found.</h4>
        </div>
    }
</div>
