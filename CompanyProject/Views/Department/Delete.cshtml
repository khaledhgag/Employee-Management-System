@using Company.DAL.Entites
@model Department

@{
    ViewData["Title"] = "Delete Department";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="fas fa-trash-alt"></i> Delete Department</h4>
        </div>
        <div class="card-body">
            <p class="text-warning">Are you sure you want to delete the department <strong>@Model.Name</strong>? This action cannot be undone.</p>

            <form asp-action="Delete">
                <div class="mb-3">
                    <label asp-for="Code" class="form-label fw-bold">Department Code</label>
                    <input readonly asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Department Name</label>
                    <input readonly asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CreationDate" class="form-label fw-bold">Creation Date</label>
                    <input readonly asp-for="CreationDate" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <input readonly asp-for="Description" class="form-control" />
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash-alt"></i> Delete Department
                    </button>
                    <a asp-controller="Department" asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
