@using Company.DAL.Entites
@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fas fa-users"></i> All Employees</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Create Employee
        </a>
    </div>

    @if (Model.Any())
    {
        <table class="table table-bordered table-striped shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(e => e.Name)</th>
                    <th>@Html.DisplayNameFor(e => e.Age)</th>
                    <th>@Html.DisplayNameFor(e => e.Salary)</th>
                    <th>Department Name</th>
                    <th style="width: 200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@item.Salary</td>
                        <td>@item.Departments?.Name</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Update" asp-route-id="@item.ID" class="btn btn-success btn-sm">
                                    <i class="fas fa-edit"></i> Update
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm ms-2">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center mt-5">
            <h4><i class="fas fa-info-circle"></i> No employees found.</h4>
        </div>
    }
</div>
