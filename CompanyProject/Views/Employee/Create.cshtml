@using Company.DAL.Entites
@model Employee

@{
    ViewData["Title"] = "Create Employee";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-user-plus"></i> Create New Employee</h4>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            @if (ViewData.ModelState.IsValid == false)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }
            <form asp-action="Create">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Full Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Age" class="form-label fw-bold">Age</label>
                    <input asp-for="Age" class="form-control" placeholder="Enter age" />
                    <span asp-validation-for="Age" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Salary" class="form-label fw-bold">Salary</label>
                    <input asp-for="Salary" class="form-control" placeholder="Enter salary" />
                    <span asp-validation-for="Salary" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DepartmentId" class="form-label fw-bold">Department</label>
                    <select asp-for="DepartmentId" class="form-control">
                        <option value="">Select Department</option>
                        @foreach (var department in ViewBag.Departments as IEnumerable<SelectListItem>)
                        {
                            <option value="@department.Value">@department.Text</option>
                        }
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger small"></span>
                </div>


                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
