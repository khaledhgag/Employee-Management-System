@using Company.DAL.Entites
@model Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-5">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4><i class="fas fa-trash-alt"></i> Delete Employee</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <strong>Are you sure you want to delete this employee?</strong>
            </div>

            <form asp-action="Delete">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Age" class="form-label"></label>
                    <input asp-for="Age" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Salary" class="form-label"></label>
                    <input asp-for="Salary" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="DepartmentId" class="form-label"></label>
                    <input asp-for="DepartmentId" class="form-control" readonly />
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" asp-controller="Employee" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
